    "express": "^4.17.1",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.13",
    "@types/pg": "^7.14.7",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
